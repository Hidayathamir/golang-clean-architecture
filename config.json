{
  "app": {
    "name": "github.com/Hidayathamir/golang-clean-architecture"
  },
  "web": {
    "prefork": false,
    "port": 3000
  },
  "log": {
    "level": 6
  },
  "database": {
    "migrations": "db/migrations",
    "username": "root",
    "password": "",
    "host": "localhost",
    "port": 3306,
    "name": "golang_clean_architecture",
    "pool": {
      "idle": 10,
      "max": 100,
      "lifetime": 300
    }
  },
  "kafka": {
    "bootstrap": {
      "servers": "localhost:9092"
    },
    "group": {
      "id": "github.com/Hidayathamir/golang-clean-architecture"
    },
    "auto": {
      "offset": {
        "reset": "earliest"
      }
    },
    "producer": {
      "enabled": true
    }
  }
}