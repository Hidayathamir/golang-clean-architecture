{
  "app": {
    "name": "github.com/Hidayathamir/golang-clean-architecture"
  },
  "auth": {
    "jwt": {
      "secret": "change-me",
      "issuer": "github.com/Hidayathamir/golang-clean-architecture",
      "expire_seconds": 3600
    }
  },
  "aws": {
    "region": "us-east-1",
    "base_endpoint": "http://localhost:4566"
  },
  "database": {
    "migrations": "db/migrations",
    "username": "postgres",
    "password": "postgres",
    "host": "localhost",
    "port": 5432,
    "name": "golang_clean_architecture",
    "pool": {
      "idle": 10,
      "max": 100,
      "lifetime": 300
    }
  },
  "kafka": {
    "bootstrap": {
      "servers": "localhost:9093"
    },
    "auto": {
      "offset": {
        "reset": "earliest"
      }
    },
    "producer": {
      "enabled": true
    }
  },
  "log": {
    "level": "trace"
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "username": "",
    "password": ""
  },
  "telemetry": {
    "otlp": {
      "endpoint": "localhost:4317"
    }
  },
  "web": {
    "prefork": false,
    "port": 3000
  }
}